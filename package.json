{
  "name": "pmics-course-materials",
  "version": "1.0.0",
  "description": "Comprehensive course materials, notes, labs, and resources for PMICS courses on networking and cybersecurity",
  "author": "nishan-paul-2022",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nishan-paul-2022/PMICS"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{json,md,svg}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{json,md,svg}\" --ignore-path .gitignore",
    "format:staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{json,md,svg}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=8.0.0"
  }
}
